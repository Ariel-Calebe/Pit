<% layout('layout') -%>

<!--
  Register Page – Card Único Centralizado com LOGO
  ✔ Fundo sólido 100% (#0F1016)
  ✔ Apenas um card ao centro (sem “card fantasma”)
  ✔ Logo centralizada acima do card
  ✔ Responsivo (mobile-first)
  ✔ Botão Google preservado porém oculto
  ✔ BLOCO DE ERRO mantido
  ✔ Marcações originais deste arquivo foram preservadas e movidas para comentário no fim
-->

<link href="https://fonts.googleapis.com/css2?family=Asap:wght@400;500;600;700&family=Atkinson+Hyperlegible:wght@400;700&family=Barlow:wght@500;700&display=swap" rel="stylesheet"/>

<style>
  :root{
    /* Fundo e containers */
    --bg-app:#0F1016;
    --bg-card:#1E202D;

    /* Texto */
    --txt-field:#778C8A;
    --txt-light-green:#BDFFD3;
    --txt-white-green:#E5FFF5;

    /* Cores CTA */
    --g-main:#39df79;
    --g-ico:#04BF8A;

    /* UI */
    --r-lg:14px;
    --r-md:10px;
    --shadow-card:0 18px 38px rgba(0,0,0,.45);
    --shadow-focus:0 0 0 3px rgba(72,222,141,.3);
  }

  *{box-sizing:border-box}
  html,body{height:100%;margin:0;padding:0}

  /* Fundo 100% preenchido e camada única visível */
  .auth-overlay{
    position:fixed;
    inset:0;
    background:var(--bg-app);
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    z-index:9999;
    isolation:isolate;
    color:var(--txt-white-green);
    font-family:"Asap",system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,"Helvetica Neue",Arial,sans-serif;
    -webkit-font-smoothing:antialiased;
    -moz-osx-font-smoothing:grayscale;
    padding:clamp(12px,3vw,24px);
  }

  /* LOGO central acima do card */
  .auth-logo{
    display:block;
    width:140px;
    max-width:32vw;
    height:auto;
    margin:0 auto 22px auto;
    object-fit:contain;
    filter: drop-shadow(0 6px 16px rgba(0,0,0,.25));
  }

  /* Placeholder discreto caso a logo falhe */
  .logo-fallback{
    width:180px; height:48px; border-radius:10px;
    background:linear-gradient(135deg, var(--g-main), var(--g-ico));
    color:var(--bg-card);
    display:none; /* mostrado via JS apenas se a imagem não carregar */
    align-items:center; justify-content:center;
    font-family:"Barlow",sans-serif; font-weight:700; letter-spacing:.5px;
    margin:0 auto 22px auto;
  }

  /* Wrapper do card */
  .auth-wrapper{
    width:min(500px, 92vw);
  }

  /* CARD ÚNICO AO CENTRO */
  .auth-card{
    background:var(--bg-card);
    border-radius:var(--r-lg);
    padding:clamp(22px,4vw,34px);
    box-shadow:var(--shadow-card);
    overflow:hidden;
    position:relative;
  }

  /* Título */
  .auth-title{
    text-align:center;
    margin:6px 0 22px 0;
    line-height:1.25;
    font-family:"Barlow",sans-serif;
    font-weight:700;
    font-size:clamp(1.4rem,2.6vw,1.9rem);
    color:var(--txt-white-green);
  }
  .auth-sub{
    text-align:center;
    color:var(--txt-light-green);
    opacity:.9;
    margin:-10px 0 18px 0;
    font-size:clamp(.92rem,1.9vw,1.02rem);
  }

  /* Formulário */
  form{ display:grid; gap:14px; }

  .field{ position:relative; }
  .field .icon{
    width:22px;height:22px;
    position:absolute;left:14px;top:50%;transform:translateY(-50%);
    color:var(--g-ico);opacity:.9;pointer-events:none;
  }
  .field__input{
    width:100%;
    padding:12px 14px 12px 44px;
    border-radius:var(--r-md);
    outline:none;
    border:1px solid rgba(255,255,255,.06);
    background:#1b1d28;
    color:var(--txt-white-green);
    font-size:.98rem;
    transition:border-color .2s ease, box-shadow .2s ease, background .2s ease;
  }
  .field__input::placeholder{ color:var(--txt-field); }
  .field__input:focus{ border-color:transparent; box-shadow:var(--shadow-focus); background:#1a1c26; }

  .muted{ color:var(--txt-field); font-size:.92rem; }
  .center{ text-align:center; }

  .terms-link{ color:var(--g-ico); text-decoration:none; font-weight:600; }
  .terms-link:hover{ text-decoration:underline; }

  .btn{
    appearance:none;border:none;cursor:pointer;width:100%;
    border-radius:999px;padding:12px 20px;
    font-family:"Atkinson Hyperlegible",sans-serif;
    font-weight:700;letter-spacing:.4px;
    transition:transform .06s ease, box-shadow .2s ease, filter .2s ease;
  }
  .btn--primary{
    background:linear-gradient(135deg,var(--g-main),#48DE8D);
    color:var(--bg-card);
    box-shadow:0 10px 22px rgba(72,222,141,.28), inset 0 -2px 0 rgba(0,0,0,.25);
    border:1px solid rgba(72,222,141,.45);
  }
  .btn--primary:hover{ filter:brightness(1.06); }
  .btn--primary:active{ transform:translateY(1px); }

  /* Botão Google preservado e invisível (compat) */
  .btn--google{ display:none !important; }

  /* Alerta de erro de cadastro (mantido) */
  .alert-error{
    margin-bottom:14px;
    border-radius:10px;
    border:1px solid rgba(255, 97, 97, .35);
    background: rgba(255, 97, 97, .08);
    padding:12px 14px;
    color:#ff9a9a;
    font-size:.93rem;
  }

  /* Acessibilidade: reduz animações */
  @media (prefers-reduced-motion:reduce){
    .btn, .field__input{ transition:none; }
  }
</style>

<!-- Camada única: fundo sólido + um card -->
<div class="auth-overlay">

  <!-- LOGO central (mesmo caminho do login) -->
  <img
    id="appLogo"
    src="/src/views/images/couplogo.png"
    alt="Logo Co-Up"
    class="auth-logo"
    loading="eager"
    decoding="async"
  />
  <div id="logoFallback" class="logo-fallback">Co-Up</div>

  <div class="auth-wrapper">
    <div class="auth-card" role="dialog" aria-labelledby="register-title">

      <% if (error) { %>
        <div class="alert-error">
          Erro no cadastro: <strong><%= code || 'tente novamente' %></strong>
        </div>
      <% } %>

      <h1 id="register-title" class="auth-title">Crie uma conta</h1>
      <p class="auth-sub">Leva menos de 1 minuto.</p>

      <!-- Botão Google (preservado/oculto) -->
      <button class="btn--google" type="button" aria-hidden="true">
        <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google logo">
      </button>

      <!-- Formulário de cadastro -->
      <form id="formSignup" class="form form--signup" method="post" action="/auth/signup" autocomplete="on" novalidate>

        <!-- Nome -->
        <label class="field">
          <span class="icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
              <path fill="currentColor" d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z"/>
            </svg>
          </span>
          <input name="name" type="text" class="field__input" placeholder="Seu nome completo" required />
        </label>

        <!-- E-mail -->
        <label class="field">
          <span class="icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
              <path fill="currentColor" d="M112 128C85.5 128 64 149.5 64 176C64 191.1 71.1 205.3 83.2 214.4L291.2 370.4C308.3 383.2 331.7 383.2 348.8 370.4L556.8 214.4C568.9 205.3 576 191.1 576 176C576 149.5 554.5 128 528 128L112 128zM64 260L64 448C64 483.3 92.7 512 128 512L512 512C547.3 512 576 483.3 576 448L576 260L377.6 408.8C343.5 434.4 296.5 434.4 262.4 408.8L64 260z" />
            </svg>
          </span>
          <input name="email" type="email" class="field__input" placeholder="exemplo@email.com" required />
        </label>

        <!-- Senha -->
        <label class="field">
          <span class="icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
              <path fill="currentColor" d="M256 160L256 224L384 224L384 160C384 124.7 355.3 96 320 96C284.7 96 256 124.7 256 160zM192 224L192 160C192 89.3 249.3 32 320 32C390.7 32 448 89.3 448 160L448 224C483.3 224 512 252.7 512 288L512 512C512 547.3 483.3 576 448 576L192 576C156.7 576 128 547.3 128 512L128 288C128 252.7 156.7 224 192 224z" />
            </svg>
          </span>
          <input name="password" type="password" class="field__input" placeholder="Crie uma senha segura" required />
        </label>

        <p class="muted center">
          Ao se cadastrar, você aceita nossos
          <a href="/terms" class="terms-link">termos de uso</a>
        </p>

        <button class="btn btn--primary" type="submit">CADASTRAR</button>
      </form>

      <p class="muted center">Já tem conta? <a href="/login" class="terms-link">Faça login</a></p>
    </div>
  </div>
</div>

<script>
  // Fallback de caminhos para a logo (igual ao login)
  (function ensureLogoLoads(){
    const img = document.getElementById('appLogo');
    const fallback = document.getElementById('logoFallback');
    if(!img) return;

    const candidates = [
      "/src/views/images/couplogo.png", // caminho informado
      "/images/couplogo.png",           // público/estático comum
      "images/couplogo.png"             // relativo
    ];

    let idx = 0;
    const tryNext = () => {
      if (idx >= candidates.length) {
        if (fallback){ fallback.style.display = "flex"; }
        if (img){ img.style.display = "none"; }
        return;
      }
      img.src = candidates[idx++];
    };
    img.addEventListener('error', tryNext, { once:false });
  })();

  // Mantido para extensões futuras (validações etc.)
  (function(){
    const form = document.getElementById('formSignup');
    if(!form) return;
    form.addEventListener('submit', function(e){
      // validação custom opcional
    });
  })();
</script>

